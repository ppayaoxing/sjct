function pageQuery(dataSize){
    var optInit = $.extend({
		items_per_page:itemPerPage,
		num_display_entries:10,
		current_page:0,
		num_edge_entries:2,
		prev_text:"上一页",
		next_text:"下一页",
		callback:pageselectCallback
	});
    $("#Pagination").pagination(dataSize, optInit);
}

// 分页组件回调函数
